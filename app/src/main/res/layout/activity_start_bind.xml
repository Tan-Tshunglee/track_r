<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg" >

    <RelativeLayout
        android:id="@+id/titleBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/title_bar_bkg">
        <ImageButton
            android:id="@+id/btnUserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/portrait"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@android:color/transparent" />

        <TextView android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My TrackR"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/mainAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_add_btn_margin_top"
        android:layout_below="@id/titleBarLayout"
        android:src="@drawable/main_add_btn" />

    <TextView android:id="@+id/clickToAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleBarLayout"
        android:layout_marginTop="@dimen/click_to_add_margin_top"
        android:text="@string/click_to_add"/>

    <TextView android:id="@+id/addHint"
        android:background="@drawable/hint_bkg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/add_hint_margin_top"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="请拿出TrackR，进行绑定"
        android:layout_below="@id/mainAddBtn" />
</RelativeLayout>
