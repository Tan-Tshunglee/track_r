<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/itembgd_white_tip"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <!-- title -->
    <TextView
        android:id="@+id/title_tip"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="@string/declare_lost"
        android:textColor="@android:color/black"
        android:textSize="@dimen/titile"
        android:paddingRight="20sp"
        android:paddingLeft="20sp"
        android:paddingTop="1sp"
        android:paddingBottom="5sp"
        />
    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

    <ImageView
        android:padding="20dp"
        android:id="@+id/tipicon"
        android:src="@drawable/key_photo"
        android:layout_gravity="center"
        android:layout_width="@dimen/track_r_photo_size"
        android:layout_height="@dimen/track_r_photo_size"
        />

    <TextView
        android:id="@+id/text_tip"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/notice_delete_loser_tip_1"
        android:textColor="@android:color/black"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="@dimen/activity_horizontal_margin"
        />
    <!-- 确认按钮 -->
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <!-- 取消按钮 -->
        <Button
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/tipbtn_cancel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            android:background="@drawable/search_failed_bkg" />

        <!-- 确认按钮 -->
        <Button
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tipbtn_ok"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/ok"
            android:textColor="@android:color/black"
            android:background="@drawable/tipbutton" />
    </RelativeLayout>
</LinearLayout>
